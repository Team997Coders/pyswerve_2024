{
    "python.analysis.autoFormatStrings": true,
    "python.analysis.include": [
        ".venv/Lib/site-packages/*",
        "./*"
    ],
    "python.analysis.extraPaths": [
        ".",
        ".venv/Lib/site-packages"
    ],
    "python.analysis.exclude": [
        ".vscode/**",
        "*.pyc",
        "__pycache__/**",
        ".hypothesis/**"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true
    },
    "files.autoSave": "onFocusChange"
}