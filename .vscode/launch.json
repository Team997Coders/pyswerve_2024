    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Module",
            "type": "python",
            "request": "launch",
            "module": "robotpy",
            "justMyCode": true,
            "args": ["deploy"],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost",
            "pathMappings": [
              {
                "localRoot": "${workspaceFolder}", // Maps C:\Users\user1\project1
                "remoteRoot": "." // To current working directory ~/project1
              }
            ]
        },
        {
          "name": "Python: Current File",
          "type": "python",
          "request": "launch",
          "program": "${file}",
          "justMyCode": true,
          "console": "integratedTerminal", 
          "env": {
            "PYTHONPATH": "${workspaceFolder}"
          }
      }, 
      {
        "name": "Debug RoboRIO",
        "type": "python",
        "request": "attach",
        "connect": {
            "host": "roboRIO-997-frc.local",
            "port": 5678
        },
        "pathMappings": [
            {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/home/lvuser/py"
            }
        ],
        "justMyCode": false,
        "preLaunchTask": "PyFRC: RIO Debug PreSteps",
    },
    {
        "name": "Debug RoboRIO Local",
        "type": "python",
        "request": "attach",
        "connect": {
            "host": "localhost",
            "port": 5678
        },
        "pathMappings": [
            {
                "localRoot": "${workspaceFolder}",
                "remoteRoot": "/home/lvuser/py"
            }
        ],
        "justMyCode": false,
        //"preLaunchTask": "PyFRC: RIO Debug PreSteps",
    },
    {
        "name": "Simulate",
        "type": "python",
        "request": "launch",
        "module": "robotpy",
        "console": "integratedTerminal",
        "justMyCode": true,
        "args": [
            "sim"
        ]
    },
    {
        "name": "Test",
        "type": "python",
        "request": "launch",
        "module": "robotpy",
        "console": "integratedTerminal",
        "justMyCode": true,
        "args": [
            "test"
        ]
    }
    ]
}